{
  "name": "almunday-com",
  "version": "4.1.8",
  "description": "Personal site and blog built with Astro.",
  "author": "Lene Saile",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "clean": "rimraf dist .astro public/assets public/*.png public/*.svg public/*.ico public/*.webmanifest",
    "sync:assets": "node ./scripts/sync-public-assets.mjs",
    "sync:content": "node ./scripts/sync-obsidian-content.mjs --clean",
    "sync:content:published": "node ./scripts/sync-obsidian-content.mjs --clean --published-only",
    "predev": "npm run sync:assets",
    "clean:og": "rimraf src/assets/og-images",
    "favicons": "node ./src/_config/setup/generate-favicons.js",
    "colors": "node ./src/_config/setup/create-colors.js",
    "screenshots": "node ./src/_config/setup/generate-screenshots.js",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "npm run clean && npm run sync:assets && astro build",
    "preview": "astro preview",
    "check": "astro check"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/Alasdair-Munday/almunday.com.git"
  },
  "dependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "debug": "^4.4.0",
    "image-size": "^2.0.2",
    "lite-youtube-embed": "^0.3.3",
    "markdown-it-wikilinks": "^1.4.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@toycode/markdown-it-class": "^1.2.4",
    "astro": "^5.2.0",
    "autoprefixer": "^10.4.21",
    "colorjs.io": "^0.5.2",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.6",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "esbuild": "^0.25.3",
    "html-minifier-terser": "^7.2.0",
    "js-yaml": "^4.1.0",
    "markdown-it": "^14.1.0",
    "markdown-it-abbr": "^2.0.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-mark": "^4.0.0",
    "markdown-it-prism": "^3.0.0",
    "netlify-plugin-cache": "^1.0.3",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "postcss-import-ext-glob": "^2.1.1",
    "postcss-js": "^4.0.1",
    "rimraf": "^6.0.1",
    "sanitize-html": "^2.16.0",
    "sharp": "^0.34.1",
    "sharp-ico": "^0.1.5",
    "slugify": "^1.6.6",
    "svgo": "^3.3.2"
  }
}
