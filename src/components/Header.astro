---
import MainNav from './MainNav.astro';
import SvgIcon from './SvgIcon.astro';
import { site } from '../lib/site.js';
import { normalizePath } from '../lib/utils.js';

const { currentPath = '/' } = Astro.props;
const isHome = normalizePath(currentPath) === '/';
---

<header class="wrapper">
  <a href="#main" class="skip-link">{site.skipContent}</a>

  <div class="repel ontop gutter-s">
    <a href="/" class="logo | cluster" aria-current={isHome ? 'page' : undefined}>
      <SvgIcon name="misc/tree-transparent" />
      <span class="font-display">{site.siteName}</span>
    </a>

    <MainNav currentPath={currentPath} />
  </div>
</header>
